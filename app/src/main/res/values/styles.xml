<resources>

    <style name="Widget.Theme.TestProject.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/tt_norms_medium</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corner_top_white</item>
    </style>

</resources>